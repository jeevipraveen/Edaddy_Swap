<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/edaddy_manipage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bac"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="start"
                android:gravity="start"

                android:src="@drawable/back_foreground"/>

            <TextView
                android:id="@+id/agentname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:fontFamily="@font/ibm_bold"
                android:gravity="center"
                android:text="Select payment method"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_20" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:background="@drawable/back"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/vehicle_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:visibility="visible"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="@dimen/dp_20">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/cash"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:background="@drawable/battery_result"
                        tools:ignore="Orientation">


                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_15"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_weight="1"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:fontFamily="@font/roboto"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:text="Cash"
                            android:textSize="16sp" />
                        <ImageView
                            android:id="@+id/select_img"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/dp_10"
                            android:background="@drawable/ic_unselect"
                            android:layout_width="25dp"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:layout_height="25dp">

                        </ImageView>
                        <ImageView
                            android:id="@+id/ok_img"
                            android:layout_gravity="center"
                            android:visibility="gone"
                            android:layout_marginStart="@dimen/dp_10"
                            android:background="@drawable/ic_select"
                            android:layout_width="25dp"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:layout_height="25dp">

                        </ImageView>




                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/qr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:background="@drawable/battery_result"
                        tools:ignore="Orientation">


                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_15"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_weight="1"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:fontFamily="@font/roboto"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:text="QR Code"
                            android:textSize="16sp" />
                        <ImageView
                            android:id="@+id/select_img2"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/dp_10"
                            android:background="@drawable/ic_unselect"
                            android:layout_width="25dp"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:layout_height="25dp">

                        </ImageView>
                        <ImageView
                            android:id="@+id/ok_img_qr"
                            android:layout_gravity="center"
                            android:visibility="gone"
                            android:layout_marginStart="@dimen/dp_10"
                            android:background="@drawable/ic_select"
                            android:layout_width="25dp"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:layout_height="25dp">

                        </ImageView>




                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/wallet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_10"
                        tools:ignore="Orientation">


                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_15"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_weight="1"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:fontFamily="@font/roboto"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:text="Wallet"
                            android:textSize="16sp" />
                        <ImageView
                            android:id="@+id/select_img3"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/dp_10"
                            android:background="@drawable/ic_unselect"
                            android:layout_width="25dp"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:layout_height="25dp">

                        </ImageView>
                        <ImageView
                            android:id="@+id/ok_img_wallet"
                            android:layout_gravity="center"
                            android:visibility="gone"
                            android:layout_marginStart="@dimen/dp_10"
                            android:background="@drawable/ic_select"
                            android:layout_width="25dp"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:layout_height="25dp">

                        </ImageView>



                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:id="@+id/wallet_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="@dimen/dp_20"
                android:background="@drawable/rectangle">


                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="42dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:src="@drawable/vouchercard" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/roboto"
                    android:gravity="start"
                    android:text="Your total saving is ₹10"

                    android:textSize="14sp" />


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Discount coupon code"
                android:layout_marginTop="30dp"
                android:textSize="18sp"
                android:visibility="gone"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_marginStart="22dp"/>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:layout_height="80dp"
                app:cardCornerRadius="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_20"
                android:backgroundTint="@color/voucher_card"
                android:layout_marginStart="@dimen/dp_20">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="0.5"
                        android:src="@drawable/vocher_sucess"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:layout_marginBottom="5dp"
                            android:text="First Swap applied"
                            android:layout_gravity="start"
                            android:textColor="@color/disount_color"
                            android:gravity="start"
                            android:fontFamily="@font/roboto"
                            android:textSize="16sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="Your total saving is ₹10"
                            android:layout_gravity="start"
                            android:gravity="start"
                            android:fontFamily="@font/roboto"
                            android:textSize="14sp" />


                    </LinearLayout>
                    <TextView
                        android:id="@+id/remove"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:text="Remove"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:fontFamily="@font/roboto"
                        android:textSize="14sp" />



                </LinearLayout>

            </androidx.cardview.widget.CardView>






        </LinearLayout>


    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/suma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:visibility="visible"
        android:layout_marginBottom="100dp"
        android:layout_gravity="bottom"
        android:layout_marginEnd="@dimen/dp_20"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="@dimen/dp_20">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="@dimen/dp_10"

                android:layout_marginEnd="@dimen/dp_10"
                android:background="@drawable/battery_result"
                tools:ignore="Orientation">
                <TextView
                    android:id="@+id/swapamint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:text="Swap amount"
                    android:textSize="14sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:text="₹112"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:fontFamily="@font/ibm_bold"
                    android:textSize="14sp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                tools:ignore="Orientation">
                <TextView
                    android:id="@+id/dis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:text="Discount"
                    android:textSize="14sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:textColor="@color/disount_color"
                    android:text="-₹120"
                    android:fontFamily="@font/roboto"
                    android:textSize="14sp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_10"
                tools:ignore="Orientation">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:textColor="#35454C"
                    android:text="Total payable"
                    android:textSize="14sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:text="₹120"
                    android:textColor="#35454C"
                    android:fontFamily="@font/roboto"
                    android:textSize="14sp" />


            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btn_login1"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:visibility="gone"
        app:cardCornerRadius="@dimen/dp_50"
        android:backgroundTint="@color/payment_uncoment"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_gravity="bottom">
        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_10"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Submit"
            android:fontFamily="@font/ibm_bold"
            android:textSize="@dimen/dp_20"
            android:textColor="#F7F7FC"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/btn_login2"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:visibility="gone"
        app:cardCornerRadius="@dimen/dp_50"
        android:backgroundTint="@color/payment_uncoment"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_gravity="bottom">
        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_10"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Continue"
            android:fontFamily="@font/ibm_bold"
            android:textSize="@dimen/dp_20"
            android:textColor="#F7F7FC"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/pay"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:visibility="visible"
        app:cardCornerRadius="@dimen/dp_50"
        android:backgroundTint="@color/edaddy_back"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_gravity="bottom">
        <TextView
            android:id="@+id/pay_amunt"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_10"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="pay"
            android:fontFamily="@font/ibm_bold"
            android:textSize="@dimen/dp_20"
            android:textColor="#F7F7FC"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>






</FrameLayout>