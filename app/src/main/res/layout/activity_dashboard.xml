<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_color"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_25">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hi ,"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/white"
                android:textSize="22sp"
                />

            <TextView
                android:id="@+id/agentname"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Login"
                android:textColor="@color/white"
                android:textSize="22sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_20"
            android:strokeColor="#9E735B">

            <ImageView

                android:id="@+id/phone_code1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_gravity="center"
                android:fontFamily="@font/ibm_semi"
                android:gravity="center"
                android:maxLength="5"
                android:src="@drawable/locatio_image"
                app:tint="@color/white"
                android:visibility="visible" />

            <TextView
                android:id="@+id/stactin_name"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto"
                android:text="Super station nanganallur"
                android:textSize="14sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_marginEnd="@dimen/dp_25"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="05/09/2023"
                android:fontFamily="@font/roboto"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/time_enter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="In: 08:00AM"
                android:textAlignment="center"
                android:fontFamily="@font/roboto"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="14sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hrs: 06:58hrs"
                android:textAlignment="center"
                android:fontFamily="@font/roboto"
                android:layout_weight="1"
                android:textColor="@color/white"

                android:textSize="14sp"
                />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/polam"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/dash_eneargy"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_marginEnd="@dimen/dp_25">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:scaleType="fitXY"
                            android:layout_marginEnd="@dimen/dp_5"
                            android:src="@drawable/swap_dashboard"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:fontFamily="@font/roboto"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:layout_gravity="center"
                            android:text="Swaps"/>


                    </LinearLayout>
                    <TextView
                        android:id="@+id/swap_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:layout_weight="0.75"
                        android:layout_marginStart="@dimen/dp_10"
                        android:gravity="center"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:text="41"
                        android:textColor="@color/white"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:textSize="16sp" />


                    </LinearLayout>
                    <ImageView

                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/dashboard_line"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_gravity="center"

                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:scaleType="fitXY"
                            android:src="@drawable/energy"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:fontFamily="@font/roboto"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:layout_gravity="center"
                            android:text="Energy"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/energy_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:layout_weight="0.75"
                        android:layout_marginStart="@dimen/dp_10"
                        android:gravity="center"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:text="150KW"
                        android:textColor="@color/white"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:textSize="16sp" />
                </LinearLayout>
                    <ImageView

                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"

                        android:layout_marginBottom="@dimen/dp_10"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/dashboard_line"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"

                    android:layout_height="match_parent">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:scaleType="fitXY"
                            android:src="@drawable/clock"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:fontFamily="@font/roboto"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:text="Time"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:layout_weight="0.75"
                        android:gravity="center"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_marginStart="@dimen/dp_10"
                        android:text="00:15hrs"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                </LinearLayout>


                </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/back"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"

                        android:orientation="horizontal">


                        <androidx.cardview.widget.CardView
                            android:id="@+id/battery1"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_marginTop="18dp"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:layout_weight="1"
                            android:backgroundTint="#F9F9F9"
                            app:cardCornerRadius="@dimen/dp_15">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"

                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight=".90"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginEnd="@dimen/dp_10"
                                        android:gravity="center"
                                        android:scaleType="fitXY"
                                        android:src="@drawable/battery_100" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="4dp"
                                        android:layout_marginTop="5dp"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/roboto"
                                        android:gravity="center"
                                        android:text="75%-100%"
                                        android:textColor="#808080"
                                        android:textSize="14sp" />

                                </LinearLayout>


                                <TextView
                                    android:id="@+id/battery_count"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="0.95"
                                    android:fontFamily="@font/roboto"
                                    android:gravity="center"
                                    android:text="75"
                                    android:textColor="@color/black"
                                    android:textSize="24sp" />
                            </LinearLayout>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/battery2"
                            android:layout_width="match_parent"
                            android:layout_marginStart="@dimen/dp_10"
                            android:layout_height="90dp"
                            android:layout_marginTop="18dp"
                            android:layout_weight="1"
                            android:backgroundTint="#F9F9F9"
                            app:cardCornerRadius="@dimen/dp_15">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"

                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginEnd="@dimen/dp_10"
                                        android:gravity="center"
                                        android:scaleType="fitXY"
                                        android:src="@drawable/battery_75" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="5dp"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/roboto"
                                        android:gravity="center"
                                        android:text="50%-75%"
                                        android:textColor="#808080"
                                        android:textSize="14sp" />

                                </LinearLayout>


                                <TextView
                                    android:id="@+id/battery_count2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="0.95"
                                    android:fontFamily="@font/roboto"
                                    android:gravity="center"
                                    android:text="75"
                                    android:textColor="@color/black"
                                    android:textSize="24sp" />
                            </LinearLayout>


                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">


                        <androidx.cardview.widget.CardView
                            android:id="@+id/battery3"
                            android:layout_width="match_parent"

                            android:layout_height="90dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:layout_weight="1"
                            android:backgroundTint="#F9F9F9"
                            app:cardCornerRadius="@dimen/dp_15">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"

                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginEnd="@dimen/dp_10"
                                        android:gravity="center"
                                        android:scaleType="fitXY"
                                        android:src="@drawable/battery_50" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/roboto"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="5dp"
                                        android:layout_marginTop="5dp"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:text="25%-50%"
                                        android:textColor="#808080"
                                        android:textSize="14sp" />

                                </LinearLayout>


                                <TextView
                                    android:id="@+id/battery_count3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="0.95"
                                    android:fontFamily="@font/roboto"
                                    android:gravity="center"
                                    android:text="75"
                                    android:textColor="@color/black"
                                    android:textSize="24sp" />
                            </LinearLayout>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/battery4"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="@dimen/dp_10"
                            android:layout_weight="1"
                            android:backgroundTint="#F9F9F9"
                            app:cardCornerRadius="@dimen/dp_15">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"

                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginEnd="@dimen/dp_10"
                                        android:gravity="center"
                                        android:scaleType="fitXY"
                                        android:src="@drawable/battery_25" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/roboto"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="5dp"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:text="0%-25%"
                                        android:textColor="#808080"
                                        android:textSize="14sp" />

                                </LinearLayout>


                                <TextView
                                    android:id="@+id/battery_count4"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="0.95"
                                    android:fontFamily="@font/roboto"
                                    android:gravity="center"
                                    android:text="75"
                                    android:textColor="@color/black"
                                    android:textSize="24sp" />
                            </LinearLayout>


                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="start"
                        android:orientation="horizontal">
                        <com.jjoe64.graphview.GraphView
                            android:id="@+id/idGraphView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true" />
                    </LinearLayout>
                </LinearLayout>




            </ScrollView>

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="bottom"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">



        <ImageView
            android:id="@+id/dashboard"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/active_home"/>
        <ImageView
            android:id="@+id/dashboard_visible"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            app:tint="#9E735B"
            android:visibility="gone"
            android:src="@drawable/dasboard_hmoe"/>

        <ImageView
            android:id="@+id/map"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"


            android:src="@drawable/dasboard_map"/>
        <ImageView
            android:id="@+id/batterswap"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:scaleType="fitXY" />
        <ImageView
            android:id="@+id/swap_history"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/dasboard_swap_history"/>
        <ImageView
            android:id="@+id/profile"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/dasboard_profile"/>

    </LinearLayout>
    <ImageView
        android:id="@+id/batterswap3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="bottom"
        android:src="@drawable/qr_dashbord2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="bottom"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>
