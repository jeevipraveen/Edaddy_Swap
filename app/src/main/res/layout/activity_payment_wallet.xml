<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/edaddy_manipage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_color"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bac"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="start"
                android:gravity="start"

                android:src="@drawable/back_foreground"/>

            <TextView
                android:id="@+id/agentname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:fontFamily="@font/ibm_bold"
                android:gravity="center"
                android:text="Discount coupon"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_20" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:background="@drawable/back2"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Discount coupon code"
                android:layout_marginStart="@dimen/dp_20"
                />

            <androidx.cardview.widget.CardView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/dp_20"
                app:cardCornerRadius="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_height="50dp">

                <EditText
                    android:layout_width="match_parent"
                    android:gravity="start"
                    android:layout_marginStart="10dp"
                    android:background="@null"
                    android:layout_gravity="center"
                    android:textSize="@dimen/dp_15"
                    android:hint="Enter discount coupon code"
                    android:layout_marginEnd="5dp"
                    android:layout_height="wrap_content"/>



            </androidx.cardview.widget.CardView>








        </LinearLayout>





    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/btn_login1"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dp_30"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        app:cardCornerRadius="@dimen/dp_50"
        android:backgroundTint="@color/edaddy_back"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_gravity="bottom">
        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Apply"
            android:fontFamily="@font/ibm_bold"
            android:textSize="@dimen/dp_20"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>



</FrameLayout>