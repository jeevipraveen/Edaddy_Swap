<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/dp_5"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dp_10"
        android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp_15"
                android:src="@drawable/history_date"

                android:gravity="center" />
            <TextView
                android:id="@+id/date_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:singleLine="false"
                android:text="TMoney"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_10"
            android:background="@drawable/battery_result"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/icon_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp_25"
                android:visibility="gone"
                android:layout_marginEnd="@dimen/dp_15"
                android:gravity="center" />

            <TextView
                android:id="@+id/name_type"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:layout_weight="0.5"
                android:fontFamily="@font/ibm_bold"
                android:text="TMoney"
                android:textColor="@color/black"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:layout_gravity="end"
                android:fontFamily="@font/ibm_bold"
                android:layout_marginEnd="@dimen/dp_10"
                android:gravity="end"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:layout_marginBottom="@dimen/dp_10"
                android:textSize="25sp" />




        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/stactin_name"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:singleLine="false"
                android:text="TMoney"
                android:gravity="start"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="14sp" />
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                app:cardBackgroundColor="#EFF8E3"
                android:layout_marginBottom="@dimen/dp_20"
                app:cardCornerRadius="@dimen/dp_20"
                android:layout_weight="0.4">
            <TextView
                android:id="@+id/complet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/disount_color"
                android:textSize="14sp" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <EditText
            android:id="@+id/userNumber"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/transparent_cc"
            android:focusable="true"
            android:hint="Mobile No"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:longClickable="false"
            android:maxLength="20"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/warm_grey_two"
            android:textColorHint="@color/warm_grey"
            android:textIsSelectable="false"
            android:textSize="@dimen/sp_16"
            android:visibility="gone" />



    </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>