<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/dp_5"
    android:orientation="vertical">

    <LinearLayout


        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:id="@+id/overalll"
            android:layout_width="match_parent"
            app:cardCornerRadius="@dimen/dp_20"
            android:layout_height="180dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/dp_25"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/dp_10"
                        android:src="@drawable/demo_image"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:gravity="center" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1.6 KM Away"
                        android:singleLine="true"
                        android:layout_marginTop="@dimen/dp_10"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="4 min drive"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/black"
                        android:textSize="12sp" />



                </LinearLayout>



                <LinearLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                       >


                        <ImageView
                            android:id="@+id/icon_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:visibility="gone"
                            android:layout_marginStart="@dimen/dp_25"
                            android:layout_marginEnd="@dimen/dp_15"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/name_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ibm_semi"
                            android:layout_weight="0.5"
                            android:singleLine="false"
                            android:text="TMoney"
                            android:padding="5dp"
                            android:layout_marginTop="@dimen/dp_10"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_16" />

                        <ImageView
                            android:id="@+id/darectin"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:src="@drawable/direction_1"
                            android:layout_marginStart="@dimen/dp_25"
                            android:layout_marginEnd="@dimen/dp_15"
                            android:layout_marginBottom="5dp"
                            android:gravity="center" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/stactin"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:singleLine="false"
                        android:layout_marginStart="@dimen/dp_10"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/stactin_2"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:singleLine="false"
                        android:layout_marginStart="@dimen/dp_10"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                    <LinearLayout
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/active"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_gravity="start"
                            android:layout_weight="0.5"
                            android:gravity="start"
                            android:layout_marginEnd="@dimen/dp_25"
                            android:src="@drawable/available_battery" />
                        <ImageView
                            android:id="@+id/unavilble"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:layout_weight="0.5"
                            android:visibility="gone"
                            android:layout_marginEnd="@dimen/dp_15"
                            android:gravity="center"
                            android:src="@drawable/unavailble_battery" />
                        <TextView
                            android:id="@+id/battery_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:singleLine="false"
                            android:text="TMoney"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                    </LinearLayout>


                </LinearLayout>
                <EditText
                    android:id="@+id/userNumber"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:background="@color/transparent_cc"
                    android:focusable="true"
                    android:hint="Mobile No"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:longClickable="false"
                    android:maxLength="20"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textColor="@color/warm_grey_two"
                    android:textColorHint="@color/warm_grey"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/sp_16"
                    android:visibility="gone" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>




    </LinearLayout>

</LinearLayout>