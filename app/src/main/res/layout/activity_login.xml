<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_color"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:fontFamily="@font/ibm_bold"
                android:textColor="@color/white"
                android:layout_marginStart="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_25"
                android:textSize="@dimen/dp_20"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_50"
                android:background="@drawable/back"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_20"
                    android:backgroundTint="@color/white"
                    app:cardCornerRadius="@dimen/dp_20">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_marginTop="@dimen/dp_30"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:layout_marginStart="@dimen/dp_20"
                            android:textColor="@color/black"
                            android:fontFamily="@font/roboto"
                            android:textSize="20sp"
                            android:text="Registered mobile number"/>

                        <TextView
                            android:layout_marginTop="@dimen/dp_15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:layout_marginStart="@dimen/dp_20"
                            android:textColor="@color/black"
                            android:fontFamily="@font/roboto"
                            android:textSize="14sp"
                            android:text=" Enter mobile number for verifications"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                          android:layout_weight="1"
                            android:background="@drawable/edit_txt_bg"
                            android:layout_marginTop="@dimen/dp_20"
                            android:layout_marginBottom="@dimen/dp_30"
                            android:layout_marginEnd="@dimen/dp_20"
                            android:layout_marginStart="@dimen/dp_20"
                            android:layout_height="?actionBarSize">

                            <TextView
                                android:id="@+id/cuntry"
                                android:layout_width="match_parent"
                                android:layout_weight="2.9"
                                android:textColor="@color/black"
                                android:fontFamily="@font/roboto"
                                android:textSize="18sp"
                                android:layout_height="?actionBarSize"
                                />
                        <EditText
                            android:id="@+id/mobileNo"
                            android:layout_width="match_parent"
                            android:layout_weight="0.5"
                            android:textColor="@color/black"
                            android:paddingStart="@dimen/dp_5"
                            android:inputType="number"
                            android:focusable="true"
                            android:textSize="18sp"
                            android:fontFamily="@font/roboto"
                            android:background="@null"
                            android:hint=" Enter mobile number"
                            android:maxLength="12"
                            android:imeOptions="actionDone"
                            android:layout_height="?actionBarSize"/>

                        </LinearLayout>





                    </LinearLayout>


                </androidx.cardview.widget.CardView>



                <LinearLayout
                    android:id="@+id/cuntry_select"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:layout_marginTop="35dp"
                    android:background="@drawable/login_card">

                    <ImageView
                        android:layout_marginTop="@dimen/dp_10"
                        android:id="@+id/phone_code1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_gravity="center"
                        android:fontFamily="@font/ibm_semi"
                        android:gravity="center"
                        android:maxLength="5"
                        android:src="@drawable/locatio_image"
                        android:textColor="@color/black"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/cuntryname"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:textColor="#9E735B"
                        android:fontFamily="@font/roboto"
                        android:text="Super station nanganallur"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>




        </LinearLayout>



    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/dp_10"

        android:background="@color/white_two">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:gravity="center"

                android:orientation="vertical">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:layout_gravity="end"


                    android:scaleType="fitEnd" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="75dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"

                    android:src="@drawable/ic_icon_logo">

                </ImageView>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="65dp"
                    android:layout_marginEnd="65dp"

                    >

                </ImageView>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:fontFamily="@font/ibm_bold"
                    android:text="Collection App "
                    android:textColor="@color/orange"
                    android:textSize="16dp">

                </TextView>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_30"
                    android:fontFamily="@font/ibm_regular"
                    android:gravity="center"
                    android:text="Enter Mobile Number"
                    android:textColor="@color/brownish_grey"
                    android:textSize="14dp"
                    android:visibility="gone">

                </TextView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="45dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginEnd="45dp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="?actionBarSize"
                        android:layout_marginStart="@dimen/dp_10"
                        android:background="@drawable/edit_txt_bg"

                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/phone_code"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/dp_5"
                            android:fontFamily="@font/ibm_semi"
                            android:gravity="center"
                            android:maxLength="5"
                            android:src="@drawable/ic_icon_flag"
                            android:textColor="@color/black" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="2dp"

                            android:gravity="center"

                            android:src="@drawable/ic_icon_drop" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:background="@color/pinkish_grey"></View>


                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColorHint="@color/grey">

                            <EditText
                                android:id="@+id/username"
                                android:layout_width="match_parent"
                                android:layout_height="?actionBarSize"
                                android:background="@color/transparent_cc"
                                android:focusable="true"
                                android:hint="Mobile Number"
                                android:imeOptions="actionDone"
                                android:focusableInTouchMode="true"
                                android:inputType="number"
                                android:longClickable="false"
                                android:maxLength="20"
                                android:paddingLeft="15dp"
                                android:paddingRight="15dp"
                                android:textColor="@color/warm_grey_two"
                                android:textColorHint="@color/warm_grey"
                                android:textIsSelectable="false"
                                android:textSize="@dimen/sp_16"
                                tools:ignore="SpeakableTextPresentCheck" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/hide_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/dp_10"
                            android:textColorHint="@color/grey"
                            android:textSize="@dimen/sp_16"
                            app:passwordToggleDrawable="@drawable/password_visible_invisible"
                            app:passwordToggleEnabled="true"
                            app:passwordToggleTint="@color/orange"
                            app:startIconDrawable="@drawable/ic_icon_password">

                            <EditText
                                android:id="@+id/password"
                                android:layout_width="match_parent"
                                android:layout_height="?actionBarSize"
                                android:layout_marginTop="15dp"
                                android:background="@color/transparent_cc"
                                android:focusable="true"
                                android:hint="@string/enter_password"
                                android:imeOptions="actionDone"
                                android:inputType="textPassword"
                                android:longClickable="false"
                                android:maxLength="100"
                                android:paddingLeft="15dp"
                                android:paddingRight="15dp"
                                android:textColor="@color/warm_grey_two"
                                android:textColorHint="@color/grey"
                                app:placeholderTextColor="@color/warm_grey" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/login_with_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_5"
                        android:fontFamily="@font/ibm_semi"
                        android:gravity="right"
                        android:singleLine="false"
                        android:textColor="@color/orange"
                        android:textSize="@dimen/sp_16" />


                    <TextView
                        android:id="@+id/login_with_otp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_5"
                        android:fontFamily="@font/ibm_semi"
                        android:gravity="right"
                        android:singleLine="false"
                        android:text="Login with OTP"
                        android:textColor="@color/orange"
                        android:textSize="16dp"
                        android:visibility="gone" />


                    <LinearLayout
                        android:id="@+id/hide_otp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp_25"
                            android:layout_marginRight="@dimen/dp_5"
                            android:fontFamily="@font/ibm_regular"
                            android:gravity="center"
                            android:singleLine="false"
                            android:text="Or Login with "
                            android:textColor="@color/black"
                            android:textSize="14dp"
                            android:visibility="gone" />


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp_10"
                            android:gravity="center"
                            android:src="@drawable/ic_icon_email"
                            android:visibility="gone"
                            app:tint="@color/orange" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/editProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_40"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:gravity="center"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/btn_login"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/button_bg_green"
                            android:fontFamily="@font/ibm_semi"
                            android:gravity="center"
                            android:paddingLeft="@dimen/dp_25"
                            android:paddingTop="@dimen/dp_8"
                            android:paddingRight="@dimen/dp_25"
                            android:paddingBottom="@dimen/dp_10"
                            android:text="Login with OTP"
                            android:textColor="@color/white"
                            android:textSize="14dp" />
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </ScrollView>
    </RelativeLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/btn_login1"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dp_50"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        app:cardCornerRadius="@dimen/dp_50"
        android:backgroundTint="@color/edaddy_back"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_gravity="bottom">
        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_10"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Get OTP"
            android:fontFamily="@font/roboto"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>
    <ImageView
        android:visibility="gone"
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:padding="@dimen/dp_15"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:src="@drawable/ic_icon_back"
        />

    <TextView
        android:id="@+id/tvLatitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".5"
        android:gravity="center"
        android:hint="0.0"
        android:visibility="gone"
        android:textColor="@android:color/black"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/tvLongitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".5"
        android:gravity="center"
        android:visibility="gone"
        android:hint="0.0"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:fontFamily="@font/ibm_regular"
        android:gravity="center"
        android:text="@string/app_version"
        android:textColor="@color/black"
        android:textSize="12dp"></TextView>

</FrameLayout>