<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/orange_light</item>
        <item name="colorOnPrimary">@color/white_two</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/orange_light</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textColorHint">@color/warm_grey</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/edaddy_back</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Theme.MyApplication2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/edaddy_back</item>
        <item name="colorPrimaryVariant">@color/orange_light</item>
<!--        <item name="colorOnPrimary">@color/white_two</item>-->

        <item name="colorOnPrimary">#423026</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/orange_light</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:textColorHint">@color/warm_grey</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>

<!--        <item name="android:statusBarColor" tools:targetApi="l">@color/edaddy_back</item>-->

        <item name="android:statusBarColor" tools:targetApi="l">#423026</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextLabelCustom" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorAccent">@color/orange</item>
        // Text Color
        <item name="hintTextColor">?attr/colorPrimary</item>
        <item name="android:textColorHint">@color/warm_grey</item>
        // Hint Color
        <item name="colorControlActivated">@color/orange_light</item>
        //Floating label color
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="Theme.AppCompat.Translucent" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeOrange" parent="Widget.AppCompat.Button.Colored">
        <item name="android:colorButtonNormal">@color/red</item>
        <item name="colorButtonNormal">@color/red</item>
        <item name="android:textColor">@color/white_two</item>
    </style>

    <style name="Color1SwitchStyle">
        <item name="colorControlActivated">@color/orange</item>
    </style>

    <style name="Theme.MyApplication.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MyApplication.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyApplication.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="TextViewNormal" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/dp_15</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColorHint">@color/transparent_cc</item>
    </style>


    <style name="EditTextViewNormalText" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">60sp</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/warm_grey</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColorHint">@color/brownish_grey</item>
    </style>

    <style name="AppThemes" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/orange</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:windowBackground">@color/black</item>
    </style>
    
    
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>



</resources>